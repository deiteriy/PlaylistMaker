<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="MenuListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textSize">@dimen/another_text_size</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
    </style>
    <style name="MenuDayNightColor">
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="MenuBackgroundStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SearchDayNightColor">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>
    <style name="TrackArtist">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display</item>
    </style>
    <style name="UpdateButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="FloatingActionButtonBackgroundStyle">
        <item name="backgroundTint">@color/fab_background_color</item>
    </style>

</resources>

