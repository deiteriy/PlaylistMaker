<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="UpdateButtonStyle">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>

    </style>
    <style name="MenuListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textSize">@dimen/another_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MenuDayNightColor">
        <item name="android:textColor">@color/black</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="MenuBackgroundStyle">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="SearchDayNightColor">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:drawableTint">@color/gray</item>
    </style>
    <style name="TrackArtist">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/gray_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="GrayTextInPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">@dimen/player_menu_text_size</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:tint">@color/gray_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="BlackTextInPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/player_menu_text_size</item>
    </style>
    <style name="FloatingActionButtonBackgroundStyle">
        <item name="backgroundTint">@color/gray</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="font_style" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="android:textColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="tabTextAppearance">@style/font_style</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomNavigationTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>



    <dimen name="player_menu_text_size">13sp</dimen>
</resources>

